generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * --------------------
 * USER
 * --------------------
 */
model User {
  id                  String  @id
  onboardingCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  onboardingAnswers OnboardingAnswer[]
  dashboardSnapshot DashboardSnapshot?
  dashboardTodos    DashboardTodo[]
  universities      University[]
}

/**
 * --------------------
 * ONBOARDING ANSWER
 * --------------------
 */
model OnboardingAnswer {
  id           String   @id @default(uuid())
  userId       String
  questionId   String
  questionText String
  answer       String // JSON string
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/**
 * --------------------
 * DASHBOARD SNAPSHOT
 * --------------------
 */
model DashboardSnapshot {
  id String @id @default(uuid())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Raw LLM output (single source of truth)
  dashboardJson Json

  // Extracted fields for fast access
  profileStrength Int
  currentStage    String

  generatedAt DateTime @default(now())
  version     Int      @default(1)
}

/**
 * --------------------
 * DASHBOARD TODO
 * --------------------
 */
model DashboardTodo {
  id String @id @default(uuid())

  userId    String
  title     String
  priority  String // high | medium | low
  completed Boolean @default(false)

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

/**
 * --------------------
 * UNIVERSITY
 * --------------------
 */
model University {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Basic info
  name        String
  location    String?
  ranking     Int?
  programName String?
  tuitionFee  String?

  // Status tracking
  status         String   @default("discovered") // discovered | shortlisted | applied | rejected | accepted
  discoveredAt   DateTime @default(now())
  shortlistedAt  DateTime?
  appliedAt      DateTime?

  // Additional data
  universityData Json? // Full university data from discovery
  notes          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, status])
}
