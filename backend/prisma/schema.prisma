generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OnboardingAnswer {
  id           String   @id @default(uuid())
  userId       String
  questionId   String
  questionText String
  answer       String
  createdAt    DateTime @default(now())

  @@index([userId])
}

model User {
  id                   String   @id
  onboardingCompleted  Boolean  @default(false)
}
